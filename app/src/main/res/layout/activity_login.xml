<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/Login"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/phone_number_edtxt"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:hint="@string/email_hint"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/send_code_btn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@string/sendCode"
            android:onClick="sendCode"
            android:background="@drawable/customborder1"/>

        <Button
            android:id="@+id/resend_code_btn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@string/ResendCode"
            android:onClick="resendCode"
            android:background="@drawable/customborder1"/>

    </LinearLayout>


    <ProgressBar
        android:layout_width="40dp"
        android:id="@+id/progress_bar"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/password_edtxt"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:textSize="18sp"
        android:hint="@string/password"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/verify_btn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@string/Verify"
            android:onClick="verifyOtp"
            android:background="@drawable/customborder1"/>
    </LinearLayout>

</LinearLayout>